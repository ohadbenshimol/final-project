{
  "name": "photo-face-server",
  "version": "1.0.0",
  "description": "photo face sample for NodeJS",
  "main": "app.js",
  "author": "SAM CLI",
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp -R node_modules package.json openapi.yaml ./build",
    "aws-sso": "aws sso login --profile photo-face-user",
    "clean": "rm -rf build/*",
    "sam-deploy": "sam deploy --profile=$npm_config_profile --stack-name $npm_package_name --parameter-overrides StackName=$npm_package_name Profile=$npm_config_profile --capabilities CAPABILITY_IAM CAPABILITY_AUTO_EXPAND CAPABILITY_NAMED_IAM --s3-bucket $npm_config_profile-build --s3-prefix builds/$npm_package_name/sam/packages",
    "update-stack": "npm run clean && npm run build && sam deploy --stack-name photo-face-server --region eu-central-1 --s3-bucket photo-face-user-build --profile photo-face-user --capabilities CAPABILITY_IAM",
    "deploy": "npm run build && npm run sam-deploy --profile=photo-face-user",
    "unit": "node_modules/.bin/jest",
    "lint": "node_modules/.bin/eslint '*.ts' --quiet --fix",
    "compile": "node_modules/.bin/tsc",
    "test": "npm run compile && npm run unit",
    "generate:models": "generate-models --openApiPath openapi.yaml",
    "generate:client": "generate-client --openApiPath openapi.yaml --clientPath 'generated-clients/http-typescript'",
    "generate:publish:cleanup:client": "generate-publish-cleanup-client --openApiPath openapi.yaml --clientPath 'generated-clients/http-typescript'"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^0.6.0",
    "@aws-lambda-powertools/metrics": "^0.6.0",
    "@aws-lambda-powertools/tracer": "^0.6.0",
    "@middy/core": "^3.6.2",
    "@middy/http-error-handler": "^3.6.2",
    "@middy/http-event-normalizer": "^3.6.2",
    "@middy/http-json-body-parser": "^3.6.2",
    "@types/archiver": "^5.3.2",
    "archiver": "^5.3.1",
    "aws-sdk": "^2.1299.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
